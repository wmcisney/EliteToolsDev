@model RadialReview.Models.Application.ReferralModel

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.CreateTime)

@{ 
	var guid = Html.NewGuid();
}
<div class="@guid">
	@try {
		<div class="row smallBreak2">
			<div class="col-xs-2" style="height:34px;"><label>From: </label></div>
			<div class="row col-xs-9 noPadLeft">
				<div class="col-xs-4"><span>@ViewBag.UserOrganization.UserName</span></div>
			</div>
		</div>
	} catch (Exception e) {

	}

	<div class="row smallBreak2">
		<div class="col-xs-2"><label>Your friend's email*:</label></div>
		<div class="row col-xs-9 noPadLeft">
			<div class="col-xs-5">@Html.TextBoxFor(x => x.EmailTo, new { placeholder = "Email", @class = "fullWidth form-control blend" })</div>
		</div>
	</div>

	<div class="row smallBreak2">
		<div class="col-xs-2"><label>Your friend's name: </label></div>
		<div class="row col-xs-9 noPadLeft">
			<div class="col-xs-5">@Html.TextBoxFor(x => x.ToName, new { placeholder = "Name", @class = "fullWidth form-control blend" })</div>
		</div>
	</div>
	<hr />

	<div class="row smallBreak2">
		<div class="col-xs-2"><label>Subject: </label></div>
		<div class="row col-xs-9 noPadLeft">
			<div class="col-xs-9">@Html.TextBoxFor(x => x.EmailSubject, new { placeholder = "Email Subject", @class = "fullWidth form-control blend" })</div>
		</div>
	</div>

	<div class="row smallBreak2">
		<div class="col-xs-2"><label>Body: </label></div>
		<div class="row col-xs-9 noPadLeft">
			<div class="col-xs-9">@Html.TextAreaFor(x => x.EmailBody, new { placeholder = "Email Body", @class = "fullWidth form-control blend" })</div>
		</div>
	</div>
</div>
<style>
	.@(guid) textarea{
		width:100%;
		height:300px;
	}

	.@(guid) label{
		float: right;
		padding-top: 5px;
	}
</style>