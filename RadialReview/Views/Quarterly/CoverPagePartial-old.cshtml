@model RadialReview.Accessors.PDF.Partial.CoverPagePartialViewModel
<style>
	.title-image-holder {
		text-align: center;
		height: 200px;
		max-height: 200px;
		vertical-align: middle;
		display: table-cell;
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		padding-top: 30px;
	}
	.bullet-container{
		position:absolute;
		bottom:0px;
		left:0;
		right:0;
	}
	.bullet-wrapper{
		display:inline;
	}
</style>
<!-- COVER PAGE -->
<div class="tt-coverpage">
	<center>
		<div class="title-image-holder">
			<img src="@Model.Image" alt="logo" style="max-width: 120px; max-height: 120px;">
		</div>
	</center>
	<h3>@Model.UpperHeading</h3>
	<h1>@Model.PrimaryHeading</h1>
	@*<h2>@Html.Encode("Q" + Model.Quarter + " "  + Model.Year)</h2>*@
	<h3>@Html.Raw(Model.LowerHeading)</h3>
	<div class="toc">
		<table>
			@foreach (var page in Model.PageNumbers) {
				<tr> <td class="content-title">@page.Title</td><td class="content-page">@page.Page</td></tr>
			}
		</table>
	</div>
	<div class="bullet-container">
		<div class="bullet-wrapper">
			<hr>
			<ul>
				<li>
					<span class="bullet-orange"></span>
					Test 1
				</li>
				<li>
					<span class="bullet-orange"></span>
					tets 2 item thing
				</li>
				@foreach (var value in Model.CoreValues) {
					<li>
						<span class="bullet-orange"></span>
						@Html.Raw(value)
					</li>
				}

			</ul>
		</div>
	</div>
</div>
<!-- END COVER PAGE -->